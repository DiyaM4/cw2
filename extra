//on main.js
import R from "./ramda.js";


cons computerchoicedisplay = document.getElementById('computer-choice');
const userchoicedisplay = document.getElementById('user-choice');
const resultDisplay=document.getElementById('result');
//this gets all the possible choices
const possiblechoice=document.querySelectorAll('button');
//listens for a click of the button and 2nd line saves what user clicked as user chouce
let userchoice
let computerchoice
let result

possiblechoice.forEach(possiblechoice => possiblechoice.addEventListener('click',(e)=>{
    //dislay user choice
    userchoice=e.target.id
    userchoicedisplay.innerHTML=userchoice
    //assigningthe userchoicesiaplay as user chooice thing the user clicked
    generatecomputerchoice()
    getresult()
}))

function generatecomputerchoice(){
    //genrstes random number and mutlpies by 3 // or yoy can use possiblechouc.length as it will give 3 too
   //mahtsf floor to ensure itsa full ineteger
    const randomNumber=Math.floor(Math.random()*3)+1
//depedning onn th e rnradom number genated it will play the following
    if (randomNumber === 1) {
        computerchoice = 'rock'
    }
    if (randomNumber === 2) {
        computerchoice = 'scissors'
    }
    if (randomNumber === 3) {
         computerchoice = 'paper'
    }
    //this acc displays it on the screen
    computerchoicedisplay.innerHTML=computerchoice
}

function getresult() {
    if (computerchoice === userchoice) {
        result='its a draw'
    }
    if (computerchoice === 'rock' && userchoice == "paper") {
        result='you win'
    }
    if (computerchoice === 'rock' && userchoice == "scissors") {
        result='you lost'
    }
    if (computerchoice === 'paper' && userchoice == "scissors") {
        result='you win'
    }
    if (computerchoice === 'paper' && userchoice == "rock") {
        result='you lose'
    }
    if (computerchoice === 'scissors' && userchoice == "rock") {
        result='you win'
    }
    if (computerchoice === 'scissors' && userchoice == "paper") {
        result='you win'
    }
    resultDisplay.innerHTML=result
}
















